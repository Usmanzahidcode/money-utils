{
  "name": "usmanzahid/money-utils",
  "description": "A utility library for accurate and consistent money calculations in PHP without rounding errors.",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "ext-bcmath": "*"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Usmanzahid\\MoneyUtils\\": "src/"
    },
    "files": [
      "src/base.php",
      "src/financial.php",
      "src/math.php",
      "src/percent.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "UsmanZahid\\MoneyUtils\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Usman Zahid",
      "email": "developerusman@yahoo.com"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^12.1"
  }
}
